<p id="notice"><%= notice %></p>

<h1>Shop</h1>
</br>
<%=link_to 'clickhere if your admin',new_admin_user_session_path%>
</br>
</br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
<tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', shop_path(product) %></td>
    <td>
        <%=form_for @order_item do |f| %>
           <%=f.hidden_field :product_id, :value => product.id%>
            <%=f.number_field :quantity, :value => 1, :min => 1%>
            <%=f.submit "Add to Cart"%>
        <%end%>
    </td>
</tr>
<%end%>


  </tbody>
</table>
<%=link_to "#{current_order.order_items.size} items with a value #{}$",cards_path%>

